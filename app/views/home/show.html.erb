<script type="text/javascript">
  $(window).load(function() {
    $("#photo_container").masonry({ 
      singleMode: true, 
    });
  });
</script>

<ul id="username_nav">
  <% @users.each do |user| %>
    <li><%= link_to user, "#" %> </li>
  <% end %>
</ul>

<% @photo_hash.each do |photos| %>
  <p> The photos here are different <%=photos[0] %></p>
  <div class="photo_container">
    <% photos[1].each do |p| %>
      <div class="photo flickr_<%= p.ownername %>">
        <%= link_to(image_tag(FlickRaw.url_m(p), :title => p.title, :border => 0, :alt => p.title), FlickRaw.url_m(p), :class => "fancy", :rel => "group")  %>
      </div>
    <% end %>
  </div>
<% end %>

